<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodel="clr-namespace:Scanner.ViewModel"
                    xmlns:view="clr-namespace:Scanner.View">
    
    <!--Data Templates apply Views to ViewModel object displayed in the UI-->

    <!--Startup Page-->

    <DataTemplate DataType="{x:Type viewmodel:StartupViewModel}">
        <view:StartupView/>
    </DataTemplate>

    <!--Scanner Page-->

    <DataTemplate DataType="{x:Type viewmodel:ScannerViewModel}">
        <view:ScannerView/>
    </DataTemplate>

    <!--Home Page-->

    <DataTemplate DataType="{x:Type viewmodel:TitulViewModel}">
        <view:TitulView/>
    </DataTemplate>
    
    <!--Settings Page-->

    <DataTemplate DataType="{x:Type viewmodel:SettingsViewModel}">
        <view:SettingsView/>
    </DataTemplate>

</ResourceDictionary>